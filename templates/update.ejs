                            </div>
                            <div class="form_message"><p id="reg-country-mess" class="reg-message"></p></div>  
                        </div>
                        <!--town-->
                        <div class="form_blok">
                            <div class="form_label"><p id="reg-label-town"></p></div>
                            <div class="form_input">
                                <select name="reg-town" id="reg-town">
                                </select>
                            </div>
                            <div class="form_message"><p id="reg-town-mess" class="reg-message"></p></div>   
                        </div>
                        <!--profession-->
                        <div class="form_blok">
                            <div class="form_label"><p id="reg-label-profession"></p></div>
                            <div class="form_input">
                                <input type="text" name="reg-profession"  id="reg-profession" maxlength="90" value="<%=profession %>">
                            </div>
                            <div class="form_message"><p id="reg-profession-mess" class="reg-message"></p></div>   
                        </div> 
                        <!--education-->
                        <div class="form_blok">
                            <div class="form_label"><p id="reg-label-education"></p></div>
                            <div class="form_input">
                                <input type="text" name="reg-education"  id="reg-education" maxlength="90" value="<%=education %>">
                            </div>
                            <div class="form_message"><p id="reg-education-mess" class="reg-message"></p></div>   
                        </div> 
                        <!--send-->             
                        <div class="form_blok_send">
                            <div class="form_label" onclick="SE.updateUser('o')"><p id="reg-up-send3" param="up" class="reg-form-send reg_send_active" style="color:#ffffff;"></p></div>
                        </div>               
                        <!--main message form-->
                        <p class="main-form-message" id="main-form-messagethree"></p>                                
                    </div>

                <!----WIDGET------------------------------------------------------>
                    <div class="tabs-form-body-one" id="tabs-body-4">
                        <div class="set_blok set_blok_update" style="text-align: center;">
                            <p id="settings_v_side"></p>
                            <div class="height-blok-set" style="padding: 8px;">
                                <div class="widget-head">
                                    <div class="widget-head-wrap">
                                        <span class="widget-head-text widget-head-text-one" id="widget-all"></span>
                                        <span class="widget-head-text2" id="widget-me"></span>
                                    </div>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-blok">
                                        <span class="widget-chack widget-chack-last2" id="widget-skills2"></span>
                                        <span class="widget-chack widget-head-text-one">
                                            <input type="radio" name="vskillsall" id="vskillsall" onchange="VW.saveWidgets('vskillsall', 'vskillsalltop')" <% if(vskillsall === 'on') {%> checked <% } %>>
                                        </span>
                                        <span class="widget-chack">
                                            <input type="radio" name="vskillsme" id="vskillsme" onchange="VW.saveWidgets('vskillsme', 'vskillsmetop')" '<% if(vskillsme === 'on') {%> checked <% } %>>
