                                <i class='fas' onclick="SE.clonePhoneNumber()">&#xf24d;</i>
                            </div>
                        </div>
                        <!--message-->
                        <div class="form_blok">
                            <div class="form_label"><p id="reg-label-message"></p></div>
                            <div class="form_input">
                                <div class="tel_blok">
                                    <select type="select" name="reg-message_cod"  id="reg-message_cod" class="tel_cod">
                                        <option value="+38">+38</option>
                                        <option value="+44">+44</option>
                                    </select>
                                    <input type="tel" name="reg-message"  id="reg-message" class="tel_nomer" maxlength="10" value="<%=message %>">
                                </div>
                            </div>
                            <div class="form_message"><p id="reg-message-mess" class="reg-message"></p></div>   
                        </div>
                        <!--send-->             
                        <div class="form_blok_send">
                            <div class="form_label" onclick="SE.updateUser('m')"><p id="reg-up-send2" param="up" class="reg-form-send reg_send_active" style="color:#ffffff;"></p></div>
                        </div>               
                        <!--main message form-->
                        <p class="main-form-message" id="main-form-messagetwo"></p>
                    </div>

                <!----OTHER------------------------------------------------------>
                    <div class="tabs-form-body-one" id="tabs-body-3">
                        <!--country-->
                        <div class="form_blok">
                            <div class="form_label"><p id="reg-label-country"></p></div>
                            <div class="form_input">
                                <select name="reg-country" id="reg-country">
